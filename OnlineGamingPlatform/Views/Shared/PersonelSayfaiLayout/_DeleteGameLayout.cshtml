			<div class="close-sidebar" data-toggle="left-sidebar-close">
				<i class="ion-close-round"></i>
			</div>
		</div>
		<div class="menu-block customscroll">
			<div class="sidebar-menu">
				<ul id="accordion-menu">

					<li class="dropdown">
						<a href="/Sayfa/PersonelSayfasi" class="dropdown-toggle">
							<span class="micon dw dw-house-1"></span><span class="mtext">Home</span>
						</a>
					</li>

					<li class="dropdown">
						<a asp-controller="Sayfa" asp-action="AddGame" class="dropdown-toggle">
							<img src="/PersonelSayfasi/src/images/oyun-ekle-duzenle-sil-icon/oyun-ekle.png"
								 alt="Oyun Ekle"
								 class="dynamic-icon">
							<span class="mtext">Oyun Ekle</span>
						</a>
					</li>

					<li class="dropdown">
						<a asp-controller="Sayfa" asp-action="OrganizeGame" class="dropdown-toggle">
							<img src="/PersonelSayfasi/src/images/oyun-ekle-duzenle-sil-icon/oyun-duzenle.png"
								 alt="Oyun Düzenle"
								 class="dynamic-icon">
							<span class="mtext">Oyun Düzenle</span>
						</a>
					</li>

					<li class="dropdown">
						<a asp-controller="Sayfa" asp-action="DeleteGame" class="dropdown-toggle">
							<img src="/PersonelSayfasi/src/images/oyun-ekle-duzenle-sil-icon/oyun-sil.png"
								 alt="Oyun Sil"
								 class="dynamic-icon">
